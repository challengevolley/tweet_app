<!DOCTYPE html>
<html>
  <head>
    <title>TweetApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body>
  <header>
  <div class="header-logo">
    <%= link_to("TweetApp", "/") %>
  </div>
  <ul class="header-menus">
     <li>
     <%= link_to("About TweetApp", "/about") %>
     </li>
    <li>
     <%= link_to("PostsList", "/posts/index") %>
    </li>
    <li>
     <%= link_to("New Post", "/posts/new") %>
    </li>
    <li>
     <%= link_to("User List", "/users/index") %>
    </li>
    <li>
     <%= link_to("SignUp", "/signup") %>
    </li>
  </ul>
</header>
    <!-- 各ビューファイルは以下のyieldに代入され、application.html.erbの一部となる -->
    <!-- flash[:notice]に代入されたメッセージ-->
    <% if flash[:notice] %>
     <div class="flash">  
      <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
